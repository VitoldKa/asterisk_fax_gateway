Speed: $faxbitrate

jobID: $jobID
exten: $exten
status: $status
sender: $sender
remotesationID: $remotestationID
origremotestationID: $origremotestationID
faxpages: $faxpages
faxresolution: $faxresolution
faxbitrate: $faxbitrate
faxerror: $faxerror
account: $account
data: $data
reason: $reason
tmpdir: $tmpdir

$faxerror 
EOF


#echo /tmp/email2fax/133412663/
